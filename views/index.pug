      a.p-2.text-dark(href='#') Проекты
      a.p-2.text-dark(href='#') Поддержка
    a.btn.btn-outline-primary(href='/logout') Выйти


block content
  .container-fluid
    nav(aria-label='breadcrumb')
    ol.breadcrumb
      li.breadcrumb-item
        a(href="#") 
          i.fa.fa-home
          Home
      li.breadcrumb-item
        a(href='#') Проекты
      li.breadcrumb-item.active(aria-current='page') Data
    .row
      // .col-md-2.d-none.d-md-block.bg-light.sidebar
      .col.d-flex
        .card-deck
          .card(style='width: 15rem;').text-center
              .card-header.text-center.p-1
                i.fas.fa-globe-europe.fa-5x
                h5.card-title.m-1 UV-geoinfo
              //img.card-img-top(src='...' alt='...')
              .card-body.text-justify
                p.card-text Гео информационный проект - Управляем Вместе
                a.btn.btn-primary(href='/map') Перейти к UV_GEO
                //- a.card-link(href='/map') Перейти к UV_GEO
          .card(style='width: 15rem;').text-center
            //- .card-header.text-center.p-1
            i.fas.fa-globe-europe.fa-5x.mt-4
            //img.card-img-top(src='...' alt='...')
            .card-body.text-left
              h5.card-title.text-center UV-geoinfo
              p.card-text.text-muted Гео информационный проект - Управляем Вместе
              //- a.btn.btn-primary(href='/map') Перейти к UV_GEO
              a.card-link(href='/map') Перейти к UV_GEO
          .card(style='width: 18rem;').text-center
              //- img.card-img-top(src='...' alt='...')
              i.fas.fa-globe-europe.fa-5x.mt-4
              .card-body.text-center
